<h1>Update <%= @landmark.name %>:</h1>

<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label>Name: </label>
  <input type="text" name="landmark[name]" id="name" values="<%=@landmark.name%>">
  <label>Year Completed: </label>
  <input type="text" name="landmark[year_completed]" id="year_completed" values="<%=@landmark.year_completed%>">
  <br><br>

  <input type="submit" value="Edit Landmark">
</form>
